#!/usr/bin/env bash
# Task 11
par=$1
case $par in 
	start)
		/bin/bash shell/process_and_signals/manage_my_process
		echo $$ > /var/run/my_process.pid
		echo "manage_my_process started"
		;;
	stop)
		kill -STOP -- "-$(pgrep manage_my_process)"
		echo "manage_my_process stopped"
		rm -rf "
		;;	
	esac
